<section
  id="portfolio"
  class="clients-served animate"
  data-animated-element="a"
  data-animate-class="cardEntrance"
>
  <h3>Portfolio</h3>
  <div class="container">
    {% for project in projects %}
    <a
      href="{{project.href}}"
      target="_blank"
    >
      <div
        class="img"
        style="background-image: url('{{project.img}}')"
      ></div>
      <div class="overlay">
        <h4>{{project.name}}</h4>
        <p>{{project.description}}</p>
      </div>
    </a>
    {% endfor %}
  </div>
</section>
